[flake8]
max-line-length = 120
# Only check for critical errors: undefined names, syntax errors, etc.
select = E9,F63,F7,F82
ignore = F821,F824
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .eggs,
    .mypy_cache,
    .pytest_cache,
per-file-ignores =
    scripts/*: E402
