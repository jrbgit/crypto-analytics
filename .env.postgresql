# PostgreSQL Database Configuration
# Copy this to .env after setting up PostgreSQL

# Database connection
DATABASE_URL=postgresql://crypto_user:crypto_secure_password_2024@localhost:5432/crypto_analytics
DB_PASSWORD=crypto_secure_password_2024

# Redis configuration
REDIS_URL=redis://localhost:6379/0

# API Keys (keep your existing values)
LIVECOINWATCH_API_KEY=your_api_key_here
OPENAI_API_KEY=your_openai_key_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=crypto-analytics-scraper/1.0

# Application settings
LOG_LEVEL=INFO
MAX_CONCURRENT_SCRAPERS=5
ANALYSIS_BATCH_SIZE=10

# Performance settings for PostgreSQL
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB